{
  "theme_color": "#29ABE2",
  "background_color": "#F0F2F5",
  "display": "standalone",
  "scope": "/",
  "start_url": "/",
  "name": "StreamTune",
  "short_name": "StreamTune",
  "description": "A modern, responsive music streaming application built with Next.js and Firebase.",
  "id": "/?source=pwa",
  "lang": "en-US",
  "dir": "ltr",
  "orientation": "portrait-primary",
  "display_override": [
    "window-controls-overlay"
  ],
  "categories": [
    "music"
  ],
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "https://i.postimg.cc/SswWC87w/streamtune.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://i.postimg.cc/SswWC87w/streamtune.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/screenshot1.jpg",
      "type": "image/jpeg",
      "sizes": "1080x1920",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshots/screenshot2.jpg",
      "type": "image/jpeg",
      "sizes": "1920x1080",
      "form_factor": "wide"
    }
  ],
  "shortcuts": [
    {
      "name": "Search",
      "short_name": "Search",
      "description": "Search for songs, artists, and playlists",
      "url": "/search"
    },
    {
      "name": "Your Library",
      "short_name": "Library",
      "description": "Access your playlists and liked songs",
      "url": "/library"
    }
  ],
  "launch_handler": {
    "client_mode": [
      "navigate-existing",
      "auto"
    ]
  },
  "share_target": {
    "action": "/share-target/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}
