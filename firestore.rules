
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users: Allow users to read their own document, and allow anyone to create a user document (for sign-up).
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // Community Playlists: Allow any authenticated user (including guests) to read.
    // Allow create, update, delete for any authenticated user.
    // Backend admin flows handle the real business logic for who can do what.
    match /communityPlaylists/{playlistId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }

    // App Config: Read-only for everyone. Only backend admin can write.
    match /app-config/version {
      allow read: if true;
      allow write: if false;
    }
    
    // User Activity: Allow anyone to create/update their own activity document.
    // This is secure because they can only write to a document named after their unique deviceId.
    match /user_activity/{deviceId} {
      allow write: if true;
      allow read: if false; // No one should read this collection from the client.
    }
  }
}
