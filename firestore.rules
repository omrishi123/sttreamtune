
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /communityPlaylists/{playlistId} {
      // Anyone, including guests, can view the community playlists.
      allow read;

      // Users can only create a playlist if they are logged in and the
      // ownerId of the new playlist is their own user ID.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;

      // Users can only update or delete a playlist if they are logged in
      // and they are the owner of the playlist that already exists.
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }
  }
}
